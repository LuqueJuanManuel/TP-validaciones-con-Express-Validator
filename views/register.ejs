<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
</head>
<body>
    <main>
        <%- include('./partials/navbar') %>
        <hr>
        <!--  -->
        <form action="" method="POST">
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="name" class="col-form-label">Nombre:</label>
            </div>
            <div class="col-auto">
              <input type="text" id="name" class="form-control" name="name" value="<%= locals.old && old.name %>">
            </div>
            <% if (locals.errors && errors.name) { %>
              <p class="feedback"><%= errors.name.msg %></p>
              <% } %>
          </div>
          <br>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="last_name" class="col-form-label">Apellido:</label>
            </div>
            <div class="col-auto">
              <input type="text" id="last_name" class="form-control" name="last_name" value="<%= locals.old && old.last_name %>">
            </div>
            <% if (locals.errors && errors.name) { %>
              <p class="feedback"><%= errors.last_name.msg %></p>
              <% } %>
          </div>
          <br>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="email" class="col-form-label">Email:</label>
            </div>
            <div class="col-auto">
              <input type="text" id="email" class="form-control" name="email" value="<%= locals.old && old.email%>">
            </div>
            <% if (locals.errors && errors.name) { %>
              <p class="feedback"><%= errors.email.msg %></p>
              <% } %>
          </div>
          <br>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="password" class="col-form-label">Contrase√±a:</label>
            </div>
            <div class="col-auto">
              <input type="text" id="password" class="form-control" name="password" value="<%= locals.old && old.password %>">
            </div>
            <% if (locals.errors && errors.name) { %>
              <p class="feedback"><%= errors.password.msg %></p>
              <% } %>
          </div>
          <br>
          <button class="btn btn-primary" type="submit">Registrate</button>

        </form>    
    </main>

    <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
    integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
    crossorigin="anonymous"
  ></script>
</body>
</html>